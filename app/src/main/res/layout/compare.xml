<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/back_blur">

    <!-- 左边的 LinearLayout -->
    <LinearLayout
        android:id="@+id/leftLayout"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 左边的内容 -->

        <!-- 横向排列的 LinearLayout 包含 Button 和 TextView -->

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/eye" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:onClick="onButton1Click"
                android:text="选择图片" />

            <TextView
                android:id="@+id/imagePathTextView1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="未选择文件" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/eye" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:onClick="onButton2Click"
                android:text="选择图片" />

            <TextView
                android:id="@+id/imagePathTextView2"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="未选择文件" />
        </LinearLayout>


        <Button
            android:id="@+id/detectButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:onClick="onDetectButtonClick"
            android:text="@string/calc"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- 右边的 LinearLayout -->
<!--    <LinearLayout-->
<!--        android:id="@+id/rightLayout"-->
<!--        android:layout_width="156dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:orientation="vertical">-->

<!--        &lt;!&ndash; 右边的内容，可以添加其他控件 &ndash;&gt;-->
<!--        <TextView-->
<!--            android:id="@+id/rightTextView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:gravity="center"-->
<!--            android:ellipsize="end"-->
<!--            android:maxLines="2"-->
<!--            android:text="对比结果加载中"-->
<!--            android:textSize="20sp" />-->
<!--    </LinearLayout>-->
    <RelativeLayout
        android:id="@+id/rightLayout"
        android:layout_width="156dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <!-- 右边的内容，可以添加其他控件 -->
        <TextView
            android:id="@+id/rightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="6"
            android:gravity="start"
            android:layout_gravity="center"
            android:text="对比结果加载中"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>

